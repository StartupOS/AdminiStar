{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es2021",
         "DOM"
      ],
      "target": "ES2020",
      "module": "Node16",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
   },
   "include": [
        "./src/**/*.ts",
        "./*.json"
    ],
   "exclude": ["./src/**/*.test.ts"]
}
